{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "v0.3 Choreo Document",
  "type": "object",
  "definitions": {
    "command": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "oneOf": [
                { "const": "deadline" },
                { "const": "parallel" },
                { "const": "race" },
                { "const": "sequential" }
              ]
            },
            "data": {
              "type": "object",
              "properties": {
                "commands": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/command" }
                }
              }
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "named" },
            "data": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "wait" },
            "data": {
              "type": "object",
              "properties": {
                "waitTime": {
                  "type": "number"
                }
              }
            }
          }
        }
      ]
    },
    "waypoint": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "heading": {
          "type": "number"
        },
        "isInitialGuess": {
          "type": "boolean"
        },
        "translationConstrained": {
          "type": "boolean"
        },
        "headingConstrained": {
          "type": "boolean"
        },
        "controlIntervalCount": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "x",
        "y",
        "heading",
        "isInitialGuess",
        "translationConstrained",
        "headingConstrained",
        "controlIntervalCount"
      ]
    },
    "generatedWaypoint": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "heading": {
          "type": "number"
        },
        "isInitialGuess": {
          "type": "boolean"
        },
        "translationConstrained": {
          "type": "boolean"
        },
        "headingConstrained": {
          "type": "boolean"
        },
        "controlIntervalCount": {
          "type": "integer",
          "minimum": 0
        },
        "timestamp": {
          "type": "number"
        },
        "isStopPoint": {
          "type": "boolean"
        }
      },
      "required": [
        "x",
        "y",
        "heading",
        "isInitialGuess",
        "translationConstrained",
        "headingConstrained",
        "controlIntervalCount",
        "timestamp"
      ]
    }
  },
  "properties": {
    "version": {
      "const": "v0.3.1"
    },
    "paths": {
      "type": "object",
      "properties": {
        ".": {
          "type": "object",
          "properties": {
            "waypoints": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/waypoint"
              }
            },
            "trajectoryWaypoints": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/generatedWaypoint"
              }
            },
            "constraints": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "scope": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        { "const": "first" },
                        { "const": "last" },
                        { "type": "number" }
                      ]
                    }
                  }
                }
              }
            },
            "usesDefaultFieldObstacles": {
              "type": "boolean"
            },
            "usesControlIntervalCulling": {
              "type": "boolean"
            },
            "usesControlIntervalGuessing": {
              "type": "boolean"
            },
            "defaultControlIntervalCount": {
              "type": "integer"
            },
            "circleObstacles": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "x": {
                    "type": "number"
                  },
                  "y": {
                    "type": "number"
                  },
                  "radius": {
                    "type": "number"
                  }
                }
              }
            },
            "eventMarkers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "target": {
                    "oneOf": [
                      { "const": "first" },
                      { "const": "last" },
                      { "type": "number" }
                    ]
                  },
                  "trajTargetIndex": {
                    "oneOf": [{ "type": "number" }, { "type": "null" }]
                  },
                  "offset": {
                    "type": "number"
                  },
                  "name": {
                    "type": "string"
                  },
                  "targetTimestamp": {
                    "type": "number"
                  },
                  "command": { "$ref": "#/definitions/command" }
                }
              }
            },
            "isTrajectoryStale": {
              "type": "boolean"
            }
          },
          "required": [
            "waypoints",
            "generatedTrajectory",
            "constraints",
            "usesControlIntervalCulling",
            "usesControlIntervalGuessing",
            "defaultControlIntervalCount",
            "circleObstacles",
            "eventMarkers"
          ]
        }
      }
    },
    "robotConfiguration": {
      "type": "object",
      "properties": {
        "mass": {
          "type": "number",
          "minimum": 0.0
        },
        "rotationalInertia": {
          "type": "number",
          "minimum": 0.0
        },
        "wheelbase": {
          "type": "number",
          "minimum": 0.0
        },
        "trackWidth": {
          "type": "number",
          "minimum": 0.0
        },
        "wheelRadius": {
          "type": "number",
          "minimum": 0.0
        },
        "motorMaxVelocity": {
          "type": "number",
          "minimum": 0.0
        },
        "motorMaxTorque": {
          "type": "number",
          "minimum": 0.0
        },
        "gearing": {
          "type": "number",
          "minimum": 0.0
        }
      },
      "required": [
        "mass",
        "rotationalInertia",
        "wheelbase",
        "trackWidth",
        "wheelRadius",
        "motorMaxVelocity",
        "motorMaxTorque",
        "gearing"
      ]
    },
    "splitTrajectoriesAtStopPoints": {
      "type": "boolean"
    },
    "usesObstacles": {
      "type": "boolean"
    }
  },
  "required": [
    "version",
    "paths",
    "robotConfiguration",
    "splitTrajectoriesAtStopPoints",
    "usesObstacles"
  ]
}
