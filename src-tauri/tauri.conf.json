{
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "beforeBundleCommand": "node copy-sidecar.cjs choreo-cli ./target",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Choreo",
    "version": "2025.0.0-beta-7"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "dialog": {
        "confirm": true,
        "open": true,
        "save": true,
        "ask": true
      },
      "window": {
        "setTitle": true,
        "close": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "appimage",
        "deb",
        "dmg",
        "nsis",
        "rpm"
      ],
      "identifier": "org.sleipnirgroup",
      "shortDescription": "Choreo",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "minimumSystemVersion": "13.3",
        "signingIdentity": "-"
      },
      "externalBin": [
        "../target/choreo-cli"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Choreo v2025.0.0-beta-7",
        "width": 1200,
        "height": 800
      }
    ]
  }
}
